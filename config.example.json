{
    "luma": {
        "display":"pygame",
        "height":32,
        "width":128,
        "mode":1
    },

    "smartchime": {
        "mqtt": {
            "enabled":true,
            "address":"mqttHost.local",
            "username":"mqttUser",
            "password":"supersecret"
        },

        "amoled_display": {
            "enabled":true,
            "always_on":false,
            "display_id":2
        },

        "oled_display": {
            
            "ssd1305hackenabled":false,

            "enabled":true,
            "refreshInterval":30,
            "arrangement": [
                {
                    "row1": [
                        {
                            "y":0,
                            "iconFont":"fa_solid",
                            "textFont":"font_small",
                            "scroll":false,
                            "columns": [
                                {
                                    "1":"clock",
                                    "4":"motion"
                                }
                            ]
                        }
                    ],
                    "row2": [
                        {
                            "y":10,
                            "iconFont":"fa_solid",
                            "textFont":"font_large",
                            "scroll":true,
                            "columns": [
                                {
                                    "1":"message"
                                }
                            ]
                        }
                    ]

                }
            ],
            "clock":[
                {
                    "icon":"\uf017",
                    "dateTimeFormat":"%a %m/%d %-I:%M%p",
                    "timezone":"America/Los_Angeles"
                }
            ],
            "motion":[
                {
                    "enabled":true,
                    "icon":"\uf554",
                    "topic":"smartchime/motion"
                }
            ],
            "message":[
                {
                    "enabled":true,
                    "icon":false,
                    "topic":"smartchime/message"
                }
            ],
            "fonts": [
                {
                    "font_small": [
                        {
                        "name":"Dot Matrix Regular.ttf",
                        "size":9
                        }
                    ],
                    "font_large": [
                        {
                        "name":"Dot Matrix Regular.ttf",
                        "size":24
                        }
                    ],
                    "fa_regular": [
                        {
                        "name":"fa-regular-400.ttf",
                        "size":8
                        }
                    ],
                    "fa_solid": [
                        {
                        "name":"fa-solid-900.ttf",
                        "size":8
                        }
                    ]
                }
            ]
        },

        "doorbell": {
                "enabled":true,
                "topic":"smartchime/doorbell",
                "audioFiles": [
                    "/home/pi/doorbell.wav"
                ]
        },

        "controls": {
            "enabled":true,
            "rotaryEncoder1": [
                {
                    "leftPin":15,
                    "rightPin":23,
                    "switchPin":14,
                    "rotaryFunction":"volume",
                    "switchFunction":"mute"
                }
            ],
            "rotaryEncoder2": [
                {
                    "leftPin":27,
                    "rightPin":22,
                    "switchPin":17,
                    "rotaryFunction":"audioFile",
                    "switchFunction":"amoledToggle"
                }
            ]
        }
    }
}
